---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getGlobalSettings } from '../lib/api';

interface Props {
  title: string;
  description?: string;
  image?: string;
  noIndex?: boolean;
}

const { 
  title, 
  description, 
  image,
  noIndex = false 
} = Astro.props;

// Fetch global settings
const settings = await getGlobalSettings();

// Use meta_title if provided, otherwise fallback to title
const metaTitle = title;
const metaDescription = description || settings.site_name || "Gohac CMS";
const ogImage = image;
const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'http://localhost:4321';
const fullImageUrl = ogImage ? (ogImage.startsWith('http') ? ogImage : `${import.meta.env.PUBLIC_API_URL || 'http://localhost:3131'}${ogImage}`) : undefined;

// Favicon URL
const faviconUrl = settings.favicon 
  ? (settings.favicon.startsWith('http') 
      ? settings.favicon 
      : `${import.meta.env.PUBLIC_API_URL || 'http://localhost:3131'}${settings.favicon}`)
  : '/favicon.svg';
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={faviconUrl} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{metaTitle}</title>
    <meta name="title" content={metaTitle} />
    <meta name="description" content={metaDescription} />
    
    <!-- Robots Meta Tag -->
    {noIndex && <meta name="robots" content="noindex, nofollow" />}
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={metaTitle} />
    <meta property="og:description" content={metaDescription} />
    {fullImageUrl && <meta property="og:image" content={fullImageUrl} />}
    <meta property="og:url" content={siteUrl} />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={metaTitle} />
    <meta name="twitter:description" content={metaDescription} />
    {fullImageUrl && <meta name="twitter:image" content={fullImageUrl} />}
    
    <script is:inline>
      // Apply theme based on user preference
      // Respects localStorage preference, falls back to system preference, defaults to dark
      const storedTheme = localStorage.getItem('theme');
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      
      if (storedTheme === 'dark' || (!storedTheme && prefersDark) || (!storedTheme && !prefersDark)) {
        // Apply dark theme if:
        // 1. User explicitly chose dark theme, OR
        // 2. No preference stored and system prefers dark, OR
        // 3. No preference stored (default to dark theme)
        document.documentElement.classList.add('dark');
      } else if (storedTheme === 'light') {
        // Apply light theme only if user explicitly chose it
        document.documentElement.classList.remove('dark');
      }
    </script>
  </head>
  <body class="bg-gray-900 text-gray-100 antialiased">
    <Header settings={settings} />
    <slot />
    <Footer />
  </body>
</html>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  html {
    font-family: system-ui, sans-serif;
  }
  
  html.dark {
    color-scheme: dark;
  }
</style>
