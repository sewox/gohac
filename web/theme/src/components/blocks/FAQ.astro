---
interface Props {
  title?: string;
  items: Array<{
    question: string;
    answer: string;
  }>;
}

const { title, items = [] } = Astro.props;
---

<section class="py-16 md:py-24 bg-gray-800">
  <div class="container mx-auto px-4">
    {title && (
      <h2 class="text-3xl md:text-4xl font-bold text-white text-center mb-12">{title}</h2>
    )}
    
    {items.length > 0 && (
      <div class="max-w-3xl mx-auto space-y-6">
        {items.map((item) => (
          <div class="bg-gray-700 rounded-lg shadow-md p-6 border border-gray-600">
            <h3 class="text-xl font-semibold text-white mb-3">{item.question}</h3>
            <p class="text-gray-300">{item.answer}</p>
          </div>
        ))}
      </div>
    )}
  </div>
</section>

