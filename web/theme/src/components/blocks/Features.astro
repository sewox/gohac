---
interface Props {
  title?: string;
  subtitle?: string;
  items: Array<{
    title: string;
    description?: string;
    icon?: string;
  }>;
  columns?: 2 | 3 | 4;
}

const { title, subtitle, items = [], columns = 3 } = Astro.props;

const gridCols = {
  2: 'md:grid-cols-2',
  3: 'md:grid-cols-3',
  4: 'md:grid-cols-4',
}[columns];
---

<section class="py-16 md:py-24 bg-gray-800">
  <div class="container mx-auto px-4">
    {(title || subtitle) && (
      <div class="text-center mb-12">
        {title && <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">{title}</h2>}
        {subtitle && <p class="text-xl text-gray-300">{subtitle}</p>}
      </div>
    )}
    
    {items.length > 0 && (
      <div class={`grid grid-cols-1 ${gridCols} gap-8`}>
        {items.map((item) => (
          <div class="bg-gray-700 p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow border border-gray-600">
            {item.icon && (
              <div class="text-4xl mb-4">{item.icon}</div>
            )}
            <h3 class="text-xl font-semibold text-white mb-2">{item.title}</h3>
            {item.description && (
              <p class="text-gray-300">{item.description}</p>
            )}
          </div>
        ))}
      </div>
    )}
  </div>
</section>

