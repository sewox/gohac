---
interface Props {
  content: string;
  align?: 'left' | 'center' | 'right';
}

const { content, align = 'left' } = Astro.props;

const alignClass = {
  left: 'text-left',
  center: 'text-center',
  right: 'text-right',
}[align];
---

<section class="py-12 md:py-16 bg-gray-900">
  <div class="container mx-auto px-4">
    <div class={`max-w-4xl mx-auto prose prose-lg prose-invert ${alignClass}`} set:html={content} />
  </div>
</section>

